[color]
  ui = auto
[user]
  name = baodang
  email = baodq96@gmail.com
[alias]
  ll = log --graph --topo-order --abbrev-commit --date=short --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset %Cblue%G?%Creset'
  b = !git rev-parse --abbrev-ref HEAD | xclip -selection clipboard
	cmt = commit --cleanup=strip
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = nvim
	quotepath = false
    mergeoptions = --no-edit
[pull]
	rebase = false
[credential]
	helper = store
[safe]
	directory = /usr/src/app
	directory = .
